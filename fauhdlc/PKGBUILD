# Maintainer: Laszlo Papp <djszapi at gmail com>
pkgname=fauhdlc
pkgver=20100325
pkgrel=1
pkgdesc="Experimental VHDL compiler and interpreter"
arch=('i686')
url="http://www3.informatik.uni-erlangen.de/Research/fauhdlc/"
license=('GPL')
depends=('gc' 'automake' 'xmlto' 'docbook-xsl')
source=(http://www3.informatik.uni-erlangen.de/Research/fauhdlc/downloads/${pkgname}-${pkgver}.tar.gz)
md5sums=('d25d269430da4525b4da51901155a642')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  sed -i "1c#!/usr/bin/env python2" "frontend/newparser/gen_parser_gen.py"
  sed -i "1c#!/usr/bin/env python2" "tests/run-tests.py"
  ./autogen.sh
  ./configure --prefix=/usr --mandir=/usr/share/man --disable-Werror
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
