pkgname=ld-lsb
pkgver=3
pkgrel=2
pkgdesc="Faking a Linux Standard Base runtime"
url="http://www.linuxfoundation.org/"
license=("gpl")
arch=('any')

if [[ "${CARCH}" == "x86_64" ]]; then
    depends=("lib32-glibc")
fi

build() {
    msg2 "nothing to build..."
}

package() {
    install -dm755 "${pkgdir}/lib"
    ln -sf "/lib/ld-linux.so.2" "${pkgdir}/lib/ld-lsb.so.3"
}
