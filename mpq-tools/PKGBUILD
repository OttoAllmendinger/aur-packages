# Contributor: Paolo Giangrandi <peoro.noob@gmail.com>

pkgname=mpq-tools
pkgver=0.4.2
pkgrel=2
pkgdesc="A few tools to manipulate mpq archives and to show libmpq usage."
license="GPL"
depends=('libmpq')
source=(https://libmpq.org/downloader/download/file/4/$pkgname-$pkgver.tar.gz)
md5sums=('305b3ab39f56b6b9c92b39d45b00223a')
arch=('i686')
url="https://libmpq.org/wiki/MpqTools"

build() {
    cd $startdir/src/$pkgname-$pkgver
    ./autogen.sh || return 1
    ./configure --prefix=/usr || return 1
    make || return 1
    make DESTDIR=$startdir/pkg install || return 1
}

