pkgname=libmpq
pkgver=0.4.2
pkgrel=2
pkgdesc="A library which can be easily used in own applications and a set of tools for manipulating mpq archives."
license="GPL"
depends=('zlib')
source=(https://libmpq.org/downloader/download/file/2/$pkgname-$pkgver.tar.gz)
md5sums=('a2f2fadecaaa841e0cde1a2fbdcacc44')
arch=('i686')
url="https://libmpq.org/wiki/LibMpq"

build() {
    cd $startdir/src/$pkgname-$pkgver
    ./autogen.sh || return 1
    ./configure --prefix=/usr || return 1
    make || return 1
    make DESTDIR=$startdir/pkg install || return 1
}
