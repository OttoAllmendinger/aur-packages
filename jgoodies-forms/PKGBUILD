# Maintainer: Otto Allmendinger <otto.allmendinger@googlemail.com>

pkgname=jgoodies-forms
pkgver=1.4.1
pkgrel=2
pkgdesc="JGoodies Java Interface Design Library"
pkgdesc="a framework that helps you layout form-oriented Swing panels"
arch=('i686' 'x86_64')
url="http://www.jgoodies.com/index.html"
license=('BSD')
depends=(java-runtime)
source=('http://www.jgoodies.com/download/libraries/forms/jgoodies-forms-1_4_1.zip')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    install -D LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -D $pkgname-$pkgver.jar "$pkgdir/usr/share/java/$pkgname/$pkgname.jar"
}
md5sums=('33993aed149bc4be7dda74cbaa8653a5')
